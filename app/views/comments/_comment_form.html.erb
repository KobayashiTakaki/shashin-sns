<%= form_with(model: current_user.comments.build,
    url: posts_comment_path, id: "comment-form-#{post.id}") do |f| %>
  <%= hidden_field_tag :post_id, post.id %>
  <%= f.text_field :content, id: "comment-content-#{post.id}" %>
  <%= button_tag(class: "comment-button", type: "button") do %>
    送信
  <% end %>
<% end %>
