<div id="post-<%= post.id %>" class="post">
  <div class="user-info col py-3">
    <span class="user-name px-2"><%= post.user.name %></span>
  </div>
  <%= image_tag post.picture.url %>
  <div class="p-3 post-info">
    <div class="post-menu mb-2">
      <div id="like-form-<%= post.id %>">
        <% if current_user.liked?(post) %>
          <%= render 'likes/unlike', post: post %>
        <% else %>
          <%= render 'likes/like', post: post %>
        <% end %>
      </div>
    </div>
    <div class="likes-count mb-2">
      <%= render 'likes/liked_by', post: post %>
    </div>
    <div class="comments">
      <%= render 'comments/comments', post: post %>
      <%= render 'comments/comment_form', post: post %>
    </div>
  </div>
</div>
